# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
charset = utf-8
end_of_line = lf
indent_style = space
indent_size = 4
insert_final_newline = true
trim_trailing_whitespace = true

# composer.json
[composer.json]
indent_style = space

# ReST-Files
[*.rst]
indent_size = 3

# MD-Files
[*.md]
indent_size = 4

# LICENSE
[LICENSE]
max_line_length = 80
